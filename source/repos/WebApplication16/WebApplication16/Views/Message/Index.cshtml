@model IEnumerable<WebApplication16.Models.Message>
<div class="container p-3">
    <div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Message LIST</h2>
    </div>
    <div class="col-6 text-right">
      <a asp-controller="Message" asp-action="Create" class="btn btn-primary"> 
          Create New Message
          </a>   
    </div>
    </div>
    <br /> <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Message
                    </th>
                </tr>

            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.TextMessage</td>

                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        
<p>No message</p>

    }
</div>
