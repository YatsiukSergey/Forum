@model IEnumerable<WebApplication16.Models.Theme>
<div class="container p-3">
    <div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">THEME LIST</h2>
    </div>
    <div class="col-6 text-right">
      <a asp-controller="Theme" asp-action="Create" class="btn btn-primary"> 
          Create New Theme
          </a>   
    </div>
    </div>
    <br /> <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Theme Name
                    </th>
                </tr>

            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.NameTheme</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Theme" asp-route-Id="@obj.IdTheme" asp-action="Edit" class="btn btn-primary mx-2">
                                    Edit
                                </a>
                                <a asp-controller="Theme" asp-route-Id="@obj.IdTheme" asp-action="Delete" class="btn btn-primary mx-2">
                                    Delete
                                </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        
<p>No category</p>

    }
</div>
