@model WebApplication16.Models.Theme

<form method="post" asp-action="DeletePost" >
    <input asp-for="IdTheme" hidden />
    <div class="border p-3">
         
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Theme </h2>
        </div>
        <div class="row"
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="NameTheme"> </label>
                    </div>
                    <div class="col-8">
                        <input asp-for="NameTheme" disabled class="form-control" />
                        
                    </div>
                </div>
           </div>
         </div>
         
         <div class="form-group row">
             <div class="col-8 offset-4 row">
                 <div class="col">  
                     <input type="submit" class="btn btn-danger w-100" value="Delete" />
                 </div>
                  <div class="col">  
                      <a  asp-action="Index" class="btn btn-success w-100">  Back </a>   
                 </div>

             </div>

         </div>
    </div>


</form>
